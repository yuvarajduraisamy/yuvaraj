{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vstscicdType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "vstscicdName": {
      "type": "string",
      "minLength": 1
    },
    "vstscicdAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "vstscicdAdminPassword": {
      "type": "securestring"
    },
    "vstscicdWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    }
    },
  "variables": {
    "vstscicdName": "[concat('vstscicd', uniqueString(resourceGroup().id))]",
    "vstscicdPrefix": "10.0.0.0/16",
    "vstscicdSubnet1Name": "Subnet-1",
    "vstscicdSubnet1Prefix": "10.0.0.0/24",
    "vstscicdSubnet2Name": "Subnet-2",
    "vstscicdSubnet2Prefix": "10.0.1.0/24",
    "vstscicdImagePublisher": "MicrosoftWindowsServer",
    "vstscicdImageOffer": "WindowsServer",
    "vstscicdOSDiskName": "vstscicdOSDisk",
    "vstscicdVmSize": "Standard_A2",
    "vstscicdVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vstscicd')]",
    "vstscicdSubnetRef": "[concat(variables('vstscicdVnetID'), '/subnets/', variables('vstscicdSubnet1Name'))]",
    "vstscicdStorageAccountContainerName": "vhds",
    "vstscicdNicName": "[concat(parameters('vstscicdName'), 'NetworkInterface')]"
      },
  "resources": [
    {
      "name": "[variables('vstscicdName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('vstscicdType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "vstscicd"
      },
      "kind": "Storage"
    },
    {
      "name": "vstscicd",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "vstscicd"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vstscicdPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vstscicdSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('vstscicdSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('vstscicdSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('vstscicdSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('vstscicdNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'vstscicd')]"
      ],
      "tags": {
        "displayName": "vstscicdNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('vstscicdSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('vstscicdName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('vstscicdName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('vstscicdNicName'))]"
      ],
      "tags": {
        "displayName": "vstscicd"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vstscicdVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vstscicdName')]",
          "adminUsername": "[parameters('vstscicdAdminUsername')]",
          "adminPassword": "[parameters('vstscicdAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('vstscicdImagePublisher')]",
            "offer": "[variables('vstscicdImageOffer')]",
            "sku": "[parameters('vstscicdWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "vstscicdOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('vstscicdName')), '2016-01-01').primaryEndpoints.blob, variables('vstscicdStorageAccountContainerName'), '/', variables('vstscicdOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vstscicdNicName'))]"
            }
          ]
        }
      }
    }
      ],
  "outputs": {}
}
