{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "demostorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "demoavsetName": {
      "type": "string",
      "minLength": 1
    },
    "demonicName": {
      "type": "string",
      "minLength": 1
    },
    "demopipDnsName": {
      "type": "string",
      "minLength": 1
    },
    "demovmName": {
      "type": "string",
      "minLength": 1
    },
    "demovmAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "demovmAdminPassword": {
      "type": "securestring"
    },
    "demovmWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    }},
  "variables": {
    "demo-vnetPrefix": "10.0.0.0/16",
    "demo-vnetSubnet1Name": "Subnet-1",
    "demo-vnetSubnet1Prefix": "10.0.0.0/24",
    "demo-vnetSubnet2Name": "Subnet-2",
    "demo-vnetSubnet2Prefix": "10.0.1.0/24",
    "demostorageName": "[concat('demostorage', uniqueString(resourceGroup().id))]",
    "demonicVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'demo-vnet')]",
    "demonicSubnetRef": "[concat(variables('demonicVnetID'), '/subnets/', variables('demo-vnetSubnet1Name'))]",
    "demopipName": "demopip",
    "demovmImagePublisher": "MicrosoftWindowsServer",
    "demovmImageOffer": "WindowsServer",
    "demovmOSDiskName": "demovmOSDisk",
    "demovmVmSize": "Standard_D2_v2",
    "demovmVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'demo-vnet')]",
    "demovmSubnetRef": "[concat(variables('demovmVnetID'), '/subnets/', variables('demo-vnetSubnet1Name'))]",
    "demovmStorageAccountContainerName": "vhds",
    "demovmNicName": "[concat(parameters('demovmName'), 'NetworkInterface')]"},
  "resources": [
    {
      "name": "demo-vnet",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "demo-vnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('demo-vnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('demo-vnetSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('demo-vnetSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('demo-vnetSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('demo-vnetSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('demostorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('demostorageType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "demostorage"
      },
      "kind": "Storage"
    },
    {
      "name": "[parameters('demoavsetName')]",
      "type": "Microsoft.Compute/availabilitySets",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "demoavset"
      },
      "properties": {
        "platformUpdateDomainCount": 1,
        "platformFaultDomainCount": 1
      }
    },
    {
      "name": "[parameters('demonicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'demo-vnet')]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('demopipName'))]"
      ],
      "tags": {
        "displayName": "demonic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('demonicSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('demopipName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('demopipName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "demopip"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('demopipDnsName')]"
        }
      }
    },
    {
      "name": "[variables('demovmNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'demo-vnet')]"
      ],
      "tags": {
        "displayName": "demovmNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('demovmSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('demovmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('demostorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('demovmNicName'))]"
      ],
      "tags": {
        "displayName": "demovm"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('demovmVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('demovmName')]",
          "adminUsername": "[parameters('demovmAdminUsername')]",
          "adminPassword": "[parameters('demovmAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('demovmImagePublisher')]",
            "offer": "[variables('demovmImageOffer')]",
            "sku": "[parameters('demovmWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "demovmOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('demostorageName')), '2016-01-01').primaryEndpoints.blob, variables('demovmStorageAccountContainerName'), '/', variables('demovmOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "diskSizeGB": "128"
          },
          "dataDisks": {
            "name": "test",
            "vhd": {
              "uri": ""
            },
            "caching": "ReadWrite",
            "diskSizeGB": "100"
          }
         
        },
        
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('demovmNicName'))]"
            }
          ]
        }
      }
    }],
  "outputs": {}
}
